<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gears"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:text="Preencha o Cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/textView2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:hint="nome"
        android:ems="10"
        android:id="@+id/editNome"
        android:background="@drawable/modelo_edit"
        android:padding="10dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:hint="e-mail"
        android:ems="10"
        android:id="@+id/editEmail2"
        android:background="@drawable/modelo_edit"
        android:padding="10dp"
        android:layout_marginTop="5dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="senha"
        android:ems="10"
        android:id="@+id/editSenha2"
        android:background="@drawable/modelo_edit"
        android:padding="10dp"
        android:layout_marginTop="5dp"  />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnviar"
            android:layout_weight="1"
            android:layout_marginRight="10px"
            android:layout_marginTop="20px"
            android:textColor="#FFFFFF"
            android:background="@drawable/modelo_botao" />
        <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:textColor="#FFFFFF"
            android:background="@drawable/modelo_botao" />
    </LinearLayout>
</LinearLayout>
